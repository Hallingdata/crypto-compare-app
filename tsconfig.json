{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react-native",
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types/**/*.d.ts"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "watch": true,
    "sourceMap": true
  },
  "include": [
    "./node_modules/@types/**/*.d.ts",
    "./node_modules/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./node_modules/native-base/index.d.ts"
  ],
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "./App.js",
    "node_modules",
    "__tests__",
    "*.js",
    "*.json"
  ],
  "compileOnSave": true
}